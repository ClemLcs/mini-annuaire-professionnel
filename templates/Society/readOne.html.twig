{% extends "base.html.twig" %}

{% block content %}
    <section class="row wrap white">
        <div class="xLarge-5 large-5 medium-12 small-12 xSmall-12">
            <div class="margin-arround column ">
                <div class="card-product ">
                    {% if society.picture is not null %}
                        <img src="{{ asset(society.picture) }}">
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="xLarge-7 large-7 medium-12 small-12 xSmall-12">
            <div class="margin-arround">
                <div class="content-title">
                    <h1>{{ society.name }}</h1>
                    {% if society.category.name is defined %}
                        <h3>Catégorie: <a href="{{ path('readOneCategory', {'name':society.category.name}) }}">{{ society.category.name }}</a></h3>
                    {% endif %}
                    <h3>Crée le: {{ society.createdat|date('l d/m/Y à H:i:s') }}</h3>
                    <span>{{ society.description }}</span>
                </div>
            </div>
        </div>
    </section>

    <section class="row wrap white">
        <div class="margin-arround row">
            <img src="{{ asset('assets/media/img/scroll.png') }}" onclick="window.history.back();" width="50px" height="50px" style="transform: rotate(90deg);">
            <h2>Revenir en arrière</h2>
        </div>
        <div class="margin-arround row">
            <h2>Autres sociétés ....</h2>
        </div>
    </section>

    <section class="row wrap white">

        {% for element in randomsocieties %}

            <div class="xLarge-6 large-6 medium-12 small-12 xSmall-12">
                <div class="margin-arround column">
                    <div class="card-product width-75">
                        <img src="{{ asset(element.picture) }}" alt="{{ element.name }}" width="75%">
                        <div class="container-product">
                            <h2><a href="{{ path('readOneSociety', {'name':element.name}) }}">{{ element.name }}</a></h2>
                            <h3>Catégorie: <a href="{{ path('readOneSociety', {'name':element.category.name}) }}">{{ element.category.name }}</a></h3>
                            <h3>Crée le: {{ element.createdat|date('l d/m/Y à H:i:s') }}</h3>
                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}


    </section>
{% endblock %}